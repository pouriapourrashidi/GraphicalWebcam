<CameraScreen>:
    GridLayout:
        cols:1
        padding:10
        spacing:10
        Camera:
            id:camera
            resolution:(640,480)
            play: False
            size_hint_y:0.8
            opacity:1
        Button:
            id:start_stop
            text: 'Start Camera'
            on_press:root.start() if root.ids.camera.play == False else root.stop()
            size_hint_y:0.1
            background_normal:'green.png'
            background_down:'red.png'
        Button:
            text: 'Capture'
            on_press:root.capture()
            size_hint_y:0.1
            background_normal:'green.png'
            background_down:'red.png'

<ImageScreen>:
    GridLayout:
        cols:1
        spacing:10
        padding:10
        Image:
            size_hint_y:0.6
            id:img
        Button:
            size_hint_y:0.1
            text:'Creat Shareable Link'
            on_press:root.creat_link()
            background_normal:'green.png'
            background_down:'red.png'
        Label:
            size_hint_y:0.1
            id:link
            color: 1,1,1,1
            text:''

        GridLayout:
            size_hint_y:0.1
            cols:2
            Button:
                text:'Copy Link'
                on_press:root.copyLink()
                background_normal:'green.png'
                background_down:'red.png'
            Button:
                text:'Open Link'
                on_press:root.openLink()
                background_normal:'green.png'
                background_down:'red.png'
        Button:
            size_hint_y:0.1
            text:'Back'
            on_press:root.back()
            background_normal:'red.png'
            background_down:'green.png'

<RootWidget>:
    canvas.before:
        Color:
            rgba:(0.95,1,0.95,1)
        Rectangle:
            pos:self.pos
            size:self.size
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id:image_screen
        name:'image_screen'